<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFilterActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="편의시설"
                    style="@style/text_title"/>
                <TextView
                    android:text="툴팁"
                    style="@style/text_explain"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/facilities_list"
                    app:flexDirection="row"
                    app:alignItems="center"
                    app:justifyContent="center"
                    app:flexWrap="wrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Dummy -->
                    <ImageButton
                        tools:visibility="visible"
                        android:visibility="gone"
                        android:id="@+id/facilities_dummy"
                        android:scaleType="fitXY"
                        android:background="?android:selectableItemBackground"
                        android:layout_margin="8dp"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_baseline_directions_bus_24"/>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="유치원 면적"
                    style="@style/text_title"/>
                <TextView
                    android:text="툴팁"
                    style="@style/text_explain"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <SeekBar
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:id="@+id/school_size_max_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/school_size_max_value"
                    android:text="값"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    style="@style/text_explain"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="교사당 학생 수"
                    style="@style/text_title"/>
                <TextView
                    android:text="툴팁"
                    style="@style/text_explain"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <SeekBar
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:id="@+id/kids_per_teacher_max_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/kids_per_teacher_max_value"
                    android:text="값"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    style="@style/text_explain"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="운영시간"
                    style="@style/text_title"/>
                <TextView
                    android:text="툴팁"
                    style="@style/text_explain"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="거리(반경)"
                    style="@style/text_title"/>
                <TextView
                    android:text="툴팁"
                    style="@style/text_explain"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <SeekBar
                    android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:id="@+id/school_distance_max_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/school_distance_max_value"
                    android:text="값"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    style="@style/text_explain"/>
            </LinearLayout>
            <!-- guarantee safe area -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/filterSetFinishBtn"
        android:text="필터 적용하기"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>